                    <script>
                        // Event Selector Toggle Logic
                        var eventSelector = document.getElementById('eventContextSelector');
                        var mainContent = document.getElementById('mainPageContent');
                        var emptyState = document.getElementById('emptyState');

                        function toggleEventContent() {
                            var selectedEvent = eventSelector.value;
                            if (selectedEvent) {
                                mainContent.style.display = 'block';
                                emptyState.style.display = 'none';
                            } else {
                                mainContent.style.display = 'none';
                                emptyState.style.display = 'block';
                            }
                        }
                        eventSelector.addEventListener('change', toggleEventContent);
                        // Initial state based on default selection
                        toggleEventContent();

                        let currentTktId = '';

                        function viewTicket(id, event, name, category, price, quota, sold, desc) {
                            document.getElementById('viewTktId').textContent = id;
                            document.getElementById('viewTktEvent').textContent = event;
                            document.getElementById('viewTktName').textContent = name;
                            const catClass = category === 'Primary' ? 'primary' : 'info';
                            document.getElementById('viewTktCategory').innerHTML = '<span class="badge bg-' + catClass + '">' + category + '</span>';
                            document.getElementById('viewTktPrice').textContent = '฿' + price.toLocaleString();
                            document.getElementById('viewTktQuota').textContent = quota;
                            document.getElementById('viewTktSold').textContent = sold + ' / ' + quota + ' (' + Math.round(sold / quota * 100) + '%)';
                            document.getElementById('viewTktDesc').textContent = desc;
                        }

                        function editTicket(id, name, category, price, quota, desc) {
                            currentTktId = id;
                            document.getElementById('editTktId').value = id;
                            document.getElementById('editTktName').value = name;
                            document.getElementById('editTktCategory').value = category;
                            document.getElementById('editTktPrice').value = price;
                            document.getElementById('editTktQuota').value = quota;
                            document.getElementById('editTktDesc').value = desc;
                        }

                        function addTicket() {
                            bootstrap.Modal.getInstance(document.getElementById('addTicketModal')).hide();
                            showToast('Ticket type added successfully!');
                        }

                        function saveTicket() {
                            bootstrap.Modal.getInstance(document.getElementById('editTicketModal')).hide();
                            showToast('Ticket type updated successfully!');
                        }

                        function deleteTicket(id, name) {
                            currentTktId = id;
                            document.getElementById('deleteTktName').textContent = name + ' (' + id + ')';
                        }

                        function confirmDelete() {
                            bootstrap.Modal.getInstance(document.getElementById('deleteTicketModal')).hide();
                            showToast('Ticket type deleted.');
                        }

                        function showToast(msg) {
                            document.getElementById('toastMessage').textContent = msg;
                            new bootstrap.Toast(document.getElementById('successToast')).show();
                        }
                    </script>