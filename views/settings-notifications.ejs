<%- contentFor('html_attribute') %> <%- contentFor('extra_css') %> <%- contentFor('content') %>

            <!-- Page Title -->
            <%- include('partials/page-title', {subtitle: 'Settings' , title: 'Notifications' }) %>

                <div class="row">
                    <div class="col-lg-8">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="header-title mb-0">Notification Settings</h5>
                            </div>
                            <div class="card-body">
                                <h6 class="mb-3">Email Notifications</h6>
                                <div class="form-check form-switch mb-2">
                                    <input class="form-check-input" type="checkbox" id="notifyNewReg" checked>
                                    <label class="form-check-label" for="notifyNewReg">New registration received</label>
                                </div>
                                <div class="form-check form-switch mb-2">
                                    <input class="form-check-input" type="checkbox" id="notifyPayment" checked>
                                    <label class="form-check-label" for="notifyPayment">Payment completed</label>
                                </div>
                                <div class="form-check form-switch mb-2">
                                    <input class="form-check-input" type="checkbox" id="notifyAbstract" checked>
                                    <label class="form-check-label" for="notifyAbstract">New abstract submission</label>
                                </div>
                                <div class="form-check form-switch mb-4">
                                    <input class="form-check-input" type="checkbox" id="notifyRefund">
                                    <label class="form-check-label" for="notifyRefund">Refund requested</label>
                                </div>

                                <h6 class="mb-3">Attendee Notifications</h6>
                                <div class="form-check form-switch mb-2">
                                    <input class="form-check-input" type="checkbox" id="attendeeConfirm" checked>
                                    <label class="form-check-label" for="attendeeConfirm">Send registration
                                        confirmation</label>
                                </div>
                                <div class="form-check form-switch mb-2">
                                    <input class="form-check-input" type="checkbox" id="attendeeReminder" checked>
                                    <label class="form-check-label" for="attendeeReminder">Event reminder (1 day
                                        before)</label>
                                </div>
                                <div class="form-check form-switch mb-4">
                                    <input class="form-check-input" type="checkbox" id="attendeeAbstract" checked>
                                    <label class="form-check-label" for="attendeeAbstract">Abstract status
                                        update</label>
                                </div>

                                <button type="submit" class="btn btn-primary">Save Changes</button>
                            </div>
                        </div>
                    </div>
                </div>

                <%- contentFor('extra_javascript') %>