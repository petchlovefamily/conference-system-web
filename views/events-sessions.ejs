            <%- contentFor('extra_javascript') %>
                <script>
                    let deleteSessionId = null;

                    function showAddForm() {
                        document.getElementById('formTitle').textContent = 'Add New Session';
                        document.getElementById('submitBtnText').textContent = 'Add Session';
                        document.getElementById('editingSessionId').value = '';
                        document.getElementById('sessionForm').reset();
                        document.querySelectorAll('.speaker-check').forEach(c => c.checked = false);
                        document.getElementById('sessionFormCard').style.display = 'block';
                        document.getElementById('sessionFormCard').scrollIntoView({ behavior: 'smooth' });
                    }

                    function hideForm() {
                        document.getElementById('sessionFormCard').style.display = 'none';
                    }

                    function editSession(id, code, name, desc, room, start, end, capacity, speakers) {
                        document.getElementById('formTitle').textContent = 'Edit Session';
                        document.getElementById('submitBtnText').textContent = 'Update Session';
                        document.getElementById('editingSessionId').value = id;
                        document.getElementById('sessionCode').value = code;
                        document.getElementById('sessionName').value = name;
                        document.getElementById('sessionDesc').value = desc;
                        document.getElementById('sessionRoom').value = room;
                        document.getElementById('sessionStart').value = start;
                        document.getElementById('sessionEnd').value = end;
                        document.getElementById('sessionCapacity').value = capacity;

                        // Set speakers
                        document.querySelectorAll('.speaker-check').forEach(c => {
                            c.checked = speakers.includes(parseInt(c.value));
                        });

                        document.getElementById('sessionFormCard').style.display = 'block';
                        document.getElementById('sessionFormCard').scrollIntoView({ behavior: 'smooth' });
                    }

                    function deleteSession(id, name) {
                        deleteSessionId = id;
                        document.getElementById('deleteSessionName').textContent = name;
                        new bootstrap.Modal(document.getElementById('deleteModal')).show();
                    }

                    function confirmDelete() {
                        bootstrap.Modal.getInstance(document.getElementById('deleteModal')).hide();
                        showToast('Session deleted successfully!');
                    }

                    document.getElementById('sessionForm').addEventListener('submit', function (e) {
                        e.preventDefault();
                        const isEdit = document.getElementById('editingSessionId').value !== '';
                        hideForm();
                        showToast(isEdit ? 'Session updated successfully!' : 'Session added successfully!');
                    });

                    function showToast(msg) {
                        document.getElementById('toastMessage').textContent = msg;
                        new bootstrap.Toast(document.getElementById('successToast')).show();
                    }
                </script>