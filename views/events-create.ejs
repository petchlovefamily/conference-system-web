<%- contentFor('html_attribute') %> <%- contentFor('extra_css') %>
        <style>
            .wizard-step {
                transition: all 0.3s ease;
            }

            .wizard-step.completed .step-circle {
                background-color: #0acf97 !important;
            }

            .wizard-step.active .step-circle {
                background-color: #3e60d5 !important;
            }

            .wizard-step.pending .step-circle {
                background-color: #e9ecef !important;
            }

            .step-circle {
                width: 48px;
                height: 48px;
                display: flex;
                align-items: center;
                justify-content: center;
                border-radius: 50%;
            }

            .wizard-line {
                position: absolute;
                height: 4px;
                background: #e9ecef;
                left: 10%;
                right: 10%;
                top: 24px;
                z-index: 0;
            }

            .wizard-line-progress {
                position: absolute;
                height: 4px;
                background: #0acf97;
                left: 10%;
                top: 24px;
                z-index: 1;
                transition: width 0.3s ease;
            }
        </style>
