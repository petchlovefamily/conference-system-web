            <%- contentFor('extra_javascript') %>
                <script>
                    let currentStep = 1;
                    const totalSteps = 4;

                    function goToStep(step) {
                        if (step < 1 || step > totalSteps) return;

                        // Hide all steps
                        for (let i = 1; i <= totalSteps; i++) {
                            document.getElementById('step' + i + 'Content').style.display = 'none';
                        }

                        // Show target step
                        document.getElementById('step' + step + 'Content').style.display = 'block';

                        // Update indicators
                        for (let i = 1; i <= totalSteps; i++) {
                            const indicator = document.getElementById('stepIndicator' + i);
                            const circle = document.getElementById('stepCircle' + i);
                            const label = document.getElementById('stepLabel' + i);

                            indicator.classList.remove('active', 'completed', 'pending');

                            if (i < step) {
                                indicator.classList.add('completed');
                                circle.className = 'step-circle bg-success text-white d-inline-flex mb-2';
                                circle.innerHTML = '<i class="ti ti-check fs-4"></i>';
                                label.className = 'text-success';
                            } else if (i === step) {
                                indicator.classList.add('active');
                                circle.className = 'step-circle bg-primary text-white d-inline-flex mb-2';
                                label.className = 'text-primary fw-bold';
                            } else {
                                indicator.classList.add('pending');
                                circle.className = 'step-circle bg-light text-muted d-inline-flex mb-2';
                                label.className = 'text-muted';
                            }
                        }

                        // Update progress line
                        const progress = ((step - 1) / (totalSteps - 1)) * 80;
                        document.getElementById('progressLine').style.width = progress + '%';

                        currentStep = step;
                    }

                    function showSessionForm() {
                        document.getElementById('sessionForm').style.display = 'block';
                        document.getElementById('addSessionBtn').style.display = 'none';
                    }

                    function cancelSession() {
                        document.getElementById('sessionForm').style.display = 'none';
                        document.getElementById('addSessionBtn').style.display = 'inline-block';
                    }

                    function saveSession() {
                        cancelSession();
                        showToast('Session added successfully!');
                    }

                    function finishCreate() {
                        showToast('Event created successfully!');
                        setTimeout(() => { window.location.href = 'events-list'; }, 1500);
                    }

                    function showToast(msg) {
                        document.getElementById('toastMessage').textContent = msg;
                        new bootstrap.Toast(document.getElementById('successToast')).show();
                    }

                    // Speaker selection
                    document.getElementById('speakerSelect').addEventListener('change', function () {
                        if (this.value) {
                            const name = this.options[this.selectedIndex].text;
                            const container = document.getElementById('selectedSpeakers');
                            container.innerHTML += '<span class="badge bg-primary me-2 mb-1">' + name + ' <button type="button" class="btn-close btn-close-white ms-1" style="font-size:0.5rem" onclick="this.parentElement.remove()"></button></span>';
                            this.value = '';
                        }
                    });
                </script>