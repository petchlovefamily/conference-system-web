                                <i class="ti ti-photo fs-4"></i>
                            </div>
                            <div class="text-muted" id="stepLabel4">Venue/Images</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Step Content -->
            <div class="row">
                <div class="col-lg-8 mx-auto">

                    <!-- Step 1: Event Details -->
                    <div id="step1Content">
                        <div class="card">
                            <div class="card-header bg-primary text-white">
                                <h5 class="card-title mb-0 text-white">
                                    <i class="ti ti-calendar-event me-2"></i>Step 1: Event Details
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Event Code <span class="text-danger">*</span></label>
                                        <input type="text" class="form-control" id="eventCode"
                                            placeholder="e.g., CONF2026">
                                    </div>
