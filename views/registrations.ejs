                                    <button type="button" class="btn btn-secondary"
                                        data-bs-dismiss="modal">Cancel</button>
                                    <button type="button" class="btn btn-primary" onclick="exportData()"><i
                                            class="ti ti-download me-1"></i> Export</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Success Toast -->
                    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
                        <div id="successToast" class="toast" role="alert">
                            <div class="toast-header bg-success text-white">
                                <i class="ti ti-check me-2"></i>
                                <strong class="me-auto">Success</strong>
                                <button type="button" class="btn-close btn-close-white"
                                    data-bs-dismiss="toast"></button>
                            </div>
                            <div class="toast-body" id="toastMessage">Operation completed!</div>
                        </div>
                    </div>

                </div><!-- End of mainPageContent -->

                <%- contentFor('extra_javascript') %>
                    <script>
                        // Event Selector Toggle Logic
                        var eventSelector = document.getElementById('eventContextSelector');
                        var mainContent = document.getElementById('mainPageContent');
                        var emptyState = document.getElementById('emptyState');

                        function toggleEventContent() {
                            var selectedEvent = eventSelector.value;
                            if (selectedEvent) {
                                mainContent.style.display = 'block';
                                emptyState.style.display = 'none';
                            } else {
                                mainContent.style.display = 'none';
                                emptyState.style.display = 'block';
                            }
                        }
                        eventSelector.addEventListener('change', toggleEventContent);
                        toggleEventContent();

                        let currentRegCode = '';

                        function viewReg(code, name, email, event, ticket, total, status, addons) {
                            document.getElementById('viewRegCode').textContent = code;
                            document.getElementById('viewRegName').textContent = name;
                            document.getElementById('viewRegEmail').textContent = email;
                            document.getElementById('viewRegEvent').textContent = event;
                            document.getElementById('viewRegTicket').textContent = ticket;
                            document.getElementById('viewRegAddons').textContent = addons;
                            document.getElementById('viewRegTotal').textContent = total;
                            const statusClass = status === 'Confirmed' ? 'success' : status === 'Pending' ? 'warning' : status === 'Checked In' ? 'info' : 'danger';
                            document.getElementById('viewRegStatus').innerHTML = '<span class="badge bg-' + statusClass + '">' + status + '</span>';
                        }

                        function checkinReg(code, name) {
                            currentRegCode = code;
                            document.getElementById('checkinCode').textContent = code;
                            document.getElementById('checkinName').textContent = name;
                        }

                        function confirmCheckin() {
                            bootstrap.Modal.getInstance(document.getElementById('checkinModal')).hide();
                            showToast('Attendee checked in successfully!');
                        }

                        function cancelReg(code, name) {
                            currentRegCode = code;
                            document.getElementById('cancelRegName').textContent = name + ' (' + code + ')';
                        }

                        function confirmCancel() {
                            bootstrap.Modal.getInstance(document.getElementById('cancelRegModal')).hide();
                            showToast('Registration cancelled.');
                        }

                        function resendEmail(code, email) {
                            currentRegCode = code;
                            document.getElementById('resendEmail').textContent = email;
                        }

                        function confirmResend() {
                            bootstrap.Modal.getInstance(document.getElementById('resendModal')).hide();
                            showToast('Payment email sent!');
                        }

                        function exportData() {
                            bootstrap.Modal.getInstance(document.getElementById('exportModal')).hide();
                            showToast('Export started. Download will begin shortly.');
                        }

                        function printBadge() {
                            bootstrap.Modal.getInstance(document.getElementById('viewRegModal')).hide();
                            showToast('Badge sent to printer.');
                        }

                        function showToast(message) {
                            document.getElementById('toastMessage').textContent = message;
                            new bootstrap.Toast(document.getElementById('successToast')).show();
                        }

                        // Ticket Filter Functions
                        let currentFilter = 'all';

                        function filterByTicket(ticketType) {
                            currentFilter = ticketType;
                            const rows = document.querySelectorAll('#registrationsTable tbody tr');
                            const filterBadge = document.getElementById('activeFilterBadge');
                            const filterLabel = document.getElementById('filterLabel');
                            const ticketDropdown = document.getElementById('ticketFilter');

                            // Update stat card styling
                            document.querySelectorAll('.stat-card').forEach(card => {
                                card.classList.remove('border-primary', 'border-2');
                            });

                            if (ticketType === 'all') {
                                // Show all rows
                                rows.forEach(row => row.style.display = '');
                                filterBadge.style.display = 'none';
                                ticketDropdown.value = '';
                            } else {
                                // Filter rows
                                rows.forEach(row => {
                                    const tickets = row.dataset.tickets || '';
                                    if (tickets.includes(ticketType)) {
                                        row.style.display = '';
                                    } else {
                                        row.style.display = 'none';
                                    }
                                });

                                // Show filter badge
                                const labels = {
                                    'conference': 'Conference',
                                    'preconference': 'Pre-Conference Workshop',
                                    'gala': 'Gala Dinner'
                                };
                                filterLabel.textContent = labels[ticketType] || ticketType;
                                filterBadge.style.display = 'block';
                                ticketDropdown.value = ticketType;

                                // Highlight active stat card
                                const activeCard = document.querySelector(`.stat-card[data-filter="${ticketType}"]`);
                                if (activeCard) {
                                    activeCard.classList.add('border-primary', 'border-2');
                                }
                            }

                            // Re-apply role filter if set
                            const roleValue = document.getElementById('roleFilter').value;
                            if (roleValue) {
                                filterByRole(roleValue, false);
                            }
                        }

                        function filterByTicketDropdown(value) {
                            filterByTicket(value || 'all');
                        }

                        // Role Filter Function
                        function filterByRole(role, resetTicket = true) {
                            const rows = document.querySelectorAll('#registrationsTable tbody tr');

                            if (!role) {
                                // Show all (respecting ticket filter)
                                const ticketValue = document.getElementById('ticketFilter').value;
                                if (ticketValue) {
                                    filterByTicket(ticketValue);
                                } else {
                                    rows.forEach(row => row.style.display = '');
                                }
                                return;
                            }

                            rows.forEach(row => {
                                const rowRole = row.dataset.role || '';
                                const rowTickets = row.dataset.tickets || '';
                                const ticketValue = document.getElementById('ticketFilter').value;

                                let showByTicket = !ticketValue || rowTickets.includes(ticketValue);
                                let showByRole = rowRole === role;

                                if (showByTicket && showByRole) {
                                    row.style.display = '';
                                } else {
                                    row.style.display = 'none';
                                }
                            });
                        }

                        // Add hover effect for stat cards
                        document.querySelectorAll('.stat-card').forEach(card => {
                            card.addEventListener('mouseenter', function () {
                                this.classList.add('shadow');
                            });
                            card.addEventListener('mouseleave', function () {
                                this.classList.remove('shadow');
                            });
                        });
                    </script>