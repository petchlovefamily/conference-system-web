<%- contentFor('html_attribute') %> <%- contentFor('extra_css') %> <%- contentFor('content') %>

            <!-- Page Title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                            <a href="events-list" class="btn btn-secondary">
                                <i class="ti ti-arrow-left me-1"></i> Back to Events
                            </a>
                        </div>
                        <h4 class="page-title">Edit Event: ACCP Annual Conference 2026</h4>
                    </div>
                </div>
            </div>

            <!-- Success Alert (shown for new events) -->
            <div class="alert alert-success mb-4" id="successAlert">
                <i class="ti ti-check me-2"></i>
                <strong>Event saved successfully!</strong>
                <span class="ms-2">You can now manage tickets and venue images below.</span>
            </div>

            <div class="row">
                <div class="col-lg-8">
                    <!-- Section 1: Event Details -->
                    <div class="card mb-4">
                        <div
                            class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0 text-white">
                                <i class="ti ti-calendar-event me-2"></i>Event Details
                            </h5>
                            <span class="badge bg-white text-primary">ID: 1</span>
                        </div>
                        <div class="card-body">
                            <form id="eventForm">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Event Code</label>
                                        <input type="text" class="form-control" value="ACCP2026" id="eventCode">
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Event Type</label>
                                        <select class="form-select" id="eventType">
                                            <option value="single_room">Single Room</option>
                                            <option value="multi_session" selected>Multi Session</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Event Name</label>
                                    <input type="text" class="form-control" value="ACCP Annual Conference 2026"
                                        id="eventName">
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Description</label>
                                    <textarea class="form-control" rows="4"
                                        id="description">การประชุมวิชาการประจำปี 2026 สำหรับเภสัชกรคลินิก ครอบคลุมหัวข้อสำคัญด้านการใช้ยาอย่างสมเหตุสมผลและเทรนด์ใหม่ในวงการเภสัชกรรม</textarea>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Start Date</label>
                                        <input type="datetime-local" class="form-control" value="2026-03-15T09:00"
                                            id="startDate">
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">End Date</label>
                                        <input type="datetime-local" class="form-control" value="2026-03-17T17:00"
                                            id="endDate">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Location Name</label>
                                        <input type="text" class="form-control" value="ศูนย์ประชุมแห่งชาติสิริกิติ์"
                                            id="location">
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Google Maps Link</label>
                                        <input type="url" class="form-control" value="https://maps.google.com/?q=QSNCC"
                                            id="mapUrl">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-4 mb-3">
                                        <label class="form-label">Max Capacity</label>
                                        <input type="number" class="form-control" value="500" id="maxCapacity">
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label class="form-label">CPE Credits</label>
                                        <input type="text" class="form-control" value="12.00" id="cpeCredits">
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label class="form-label">Status</label>
                                        <select class="form-select" id="status">
                                            <option value="draft">Draft</option>
                                            <option value="published" selected>Published</option>
                                            <option value="cancelled">Cancelled</option>
                                            <option value="completed">Completed</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Cover Image</label>
                                    <input type="file" class="form-control" accept="image/*">
                                    <div class="mt-2">
                                        <img src="/images/small/small-3.jpg" alt="Preview" class="img-thumbnail"
                                            style="max-height: 150px;">
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label"><i class="ti ti-users me-1"></i>Speakers</label>
                                    <div id="selectedSpeakers" class="mb-2">
                                        <span class="badge bg-primary me-2 mb-1">Dr. Somchai Jaidee <button
                                                type="button" class="btn-close btn-close-white ms-1"
                                                style="font-size:0.5rem"></button></span>
                                        <span class="badge bg-primary me-2 mb-1">Prof. Wichai Tanaka <button
                                                type="button" class="btn-close btn-close-white ms-1"
                                                style="font-size:0.5rem"></button></span>
                                    </div>
                                    <select class="form-select" id="speakerSelect">
                                        <option value="">+ Add Speaker</option>
                                        <option value="3">Dr. Nattaporn Srisuk</option>
                                        <option value="4">Dr. Supaporn Chai</option>
                                    </select>
                                </div>

                                <hr>
                                <div class="d-flex gap-2">
                                    <button type="button" class="btn btn-primary" onclick="saveEvent()">
                                        <i class="ti ti-device-floppy me-1"></i> Save Changes
                                    </button>
                                    <a href="events-list" class="btn btn-light">Cancel</a>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Section 2: Ticket Types -->
                    <div class="card mb-4">
                        <div class="card-header bg-warning d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0">
                                <i class="ti ti-ticket me-2"></i>Ticket Types
                            </h5>
                            <button class="btn btn-sm btn-dark" data-bs-toggle="modal" data-bs-target="#addTicketModal">
                                <i class="ti ti-plus me-1"></i> Add Ticket
                            </button>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Ticket Name</th>
                                            <th>Category</th>
                                            <th>Price</th>
                                            <th>Quota / Sold</th>
                                            <th style="width: 100px">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td><strong>Early Bird - Member</strong></td>
                                            <td><span class="badge bg-primary">Primary</span></td>
                                            <td>฿3,500</td>
                                            <td>100 / 85 <span class="text-warning">(15 left)</span></td>
                                            <td>
                                                <button class="btn btn-sm btn-light me-1"><i
                                                        class="ti ti-pencil"></i></button>
                                                <button class="btn btn-sm btn-danger"><i
                                                        class="ti ti-trash"></i></button>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td><strong>Early Bird - Public</strong></td>
                                            <td><span class="badge bg-primary">Primary</span></td>
                                            <td>฿4,500</td>
                                            <td>150 / 120 <span class="text-warning">(30 left)</span></td>
                                            <td>
                                                <button class="btn btn-sm btn-light me-1"><i
                                                        class="ti ti-pencil"></i></button>
                                                <button class="btn btn-sm btn-danger"><i
                                                        class="ti ti-trash"></i></button>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td><strong>Workshop: Drug Interaction</strong></td>
                                            <td><span class="badge bg-info">Add-on</span></td>
                                            <td>฿1,500</td>
                                            <td>50 / 42 <span class="text-danger">(8 left)</span></td>
                                            <td>
                                                <button class="btn btn-sm btn-light me-1"><i
                                                        class="ti ti-pencil"></i></button>
                                                <button class="btn btn-sm btn-danger"><i
                                                        class="ti ti-trash"></i></button>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td><strong>Gala Dinner</strong></td>
                                            <td><span class="badge bg-info">Add-on</span></td>
                                            <td>฿2,000</td>
                                            <td>200 / 150 <span class="text-success">(50 left)</span></td>
                                            <td>
                                                <button class="btn btn-sm btn-light me-1"><i
                                                        class="ti ti-pencil"></i></button>
                                                <button class="btn btn-sm btn-danger"><i
                                                        class="ti ti-trash"></i></button>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- Section 3: Sessions (only for multi_session) -->
                    <div class="card mb-4" id="sessionsSection">
                        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0 text-white">
                                <i class="ti ti-layout-grid me-2"></i>Sessions
                            </h5>
                            <a href="events-sessions?id=1" class="btn btn-sm btn-light">
                                <i class="ti ti-settings me-1"></i> Manage Sessions
                            </a>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Code</th>
                                            <th>Session Name</th>
                                            <th>Room</th>
                                            <th>Time</th>
                                            <th>Speakers</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td><code>S01</code></td>
                                            <td><strong>Opening Ceremony</strong></td>
                                            <td>Grand Ballroom</td>
                                            <td>Mar 15, 09:00-10:00</td>
                                            <td>Dr. Somchai Jaidee</td>
                                        </tr>
                                        <tr>
                                            <td><code>S02</code></td>
                                            <td><strong>Keynote: Future of Clinical Pharmacy</strong></td>
                                            <td>Grand Ballroom</td>
                                            <td>Mar 15, 10:30-12:00</td>
                                            <td>Prof. Wichai Tanaka</td>
                                        </tr>
                                        <tr>
                                            <td><code>S03</code></td>
                                            <td><strong>Workshop: Drug Interaction Analysis</strong></td>
                                            <td>Meeting Room A</td>
                                            <td>Mar 15, 13:30-16:00</td>
                                            <td>Dr. Nattaporn Srisuk</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- Section 4: Venue Images -->
                    <div class="card mb-4">
                        <div
                            class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0 text-white">
                                <i class="ti ti-photo me-2"></i>Venue Images
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <input type="file" class="form-control" multiple accept="image/*">
                            </div>
                            <div class="row g-3">
                                <div class="col-md-3">
                                    <div class="card border">
                                        <img src="/images/small/small-1.jpg" class="card-img-top" alt="Venue 1">
                                        <div class="card-body p-2 text-center">
                                            <button class="btn btn-sm btn-danger"><i class="ti ti-trash"></i>
                                                Remove</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card border">
                                        <img src="/images/small/small-2.jpg" class="card-img-top" alt="Venue 2">
                                        <div class="card-body p-2 text-center">
                                            <button class="btn btn-sm btn-danger"><i class="ti ti-trash"></i>
                                                Remove</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card border">
                                        <img src="/images/small/small-3.jpg" class="card-img-top" alt="Venue 3">
                                        <div class="card-body p-2 text-center">
                                            <button class="btn btn-sm btn-danger"><i class="ti ti-trash"></i>
                                                Remove</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Sidebar -->
                <div class="col-lg-4">
                    <div class="card sticky-top" style="top: 20px;">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="ti ti-info-circle me-2"></i>Quick Links
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <button class="btn btn-outline-primary">
                                    <i class="ti ti-eye me-2"></i>View Event
                                </button>
                                <a href="#" class="btn btn-outline-success" target="_blank">
                                    <i class="ti ti-external-link me-2"></i>Public Page
                                </a>
                                <a href="registrations" class="btn btn-outline-info">
                                    <i class="ti ti-users me-2"></i>View Registrations (205)
                                </a>
                            </div>

                            <hr>

                            <div class="text-muted small">
                                <p class="mb-2">
                                    <i class="ti ti-calendar me-1"></i>
                                    <strong>Created:</strong> Jan 5, 2026
                                </p>
                                <p class="mb-2">
                                    <i class="ti ti-refresh me-1"></i>
                                    <strong>Last Updated:</strong> Jan 7, 2026, 10:30
                                </p>
                                <p class="mb-0">
                                    <i class="ti ti-id me-1"></i>
                                    <strong>Event ID:</strong> 1
                                </p>
                            </div>

                            <hr>

                            <h6 class="text-muted">Quick Stats</h6>
                            <div class="row text-center">
                                <div class="col-4">
                                    <h4 class="text-primary mb-0">205</h4>
                                    <small class="text-muted">Registered</small>
                                </div>
                                <div class="col-4">
                                    <h4 class="text-success mb-0">45</h4>
                                    <small class="text-muted">Available</small>
                                </div>
                                <div class="col-4">
                                    <h4 class="text-info mb-0">82%</h4>
                                    <small class="text-muted">Filled</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Add Ticket Modal -->
            <div class="modal fade" id="addTicketModal" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title"><i class="ti ti-ticket me-2"></i>Add Ticket Type</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <div class="mb-3">
                                <label class="form-label">Ticket Name *</label>
                                <input type="text" class="form-control" placeholder="e.g., VIP Pass">
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Category</label>
                                    <select class="form-select">
                                        <option value="primary">Primary</option>
                                        <option value="addon">Add-on</option>
                                    </select>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Price (฿)</label>
                                    <input type="number" class="form-control" placeholder="3500">
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Quota</label>
                                <input type="number" class="form-control" value="100">
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-primary" data-bs-dismiss="modal"
                                onclick="showToast('Ticket type added!')">Add Ticket</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Toast -->
            <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
                <div id="successToast" class="toast">
                    <div class="toast-header bg-success text-white"><i class="ti ti-check me-2"></i><strong
                            class="me-auto">Success</strong><button type="button" class="btn-close btn-close-white"
                            data-bs-dismiss="toast"></button></div>
                    <div class="toast-body" id="toastMessage"></div>
                </div>
            </div>

            <%- contentFor('extra_javascript') %>
                <script>
                    function saveEvent() {
                        showToast('Event details saved successfully!');
                    }

                    function showToast(msg) {
                        document.getElementById('toastMessage').textContent = msg;
                        new bootstrap.Toast(document.getElementById('successToast')).show();
                    }
                </script>