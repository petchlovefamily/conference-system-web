    <!-- Result Overlay -->
    <div class="result-overlay" id="resultOverlay">
        <div class="result-content" id="resultContent"></div>
    </div>

    <script src="/js/vendor.min.js"></script>
    <script>
        // State
        let currentEvent = null;
        let currentStation = null;
        let checkedInCount = 0;
        let eligibleCount = 0;

        // Events & Stations Data
        const eventsData = {
            1: {
                name: 'ACCP Annual Conference 2026',
                code: 'ACCP2026',
                stations: [
                    { id: 'main', name: 'Main Conference', desc: 'ห้องประชุมหลัก - ผู้ลงทะเบียนทุกคน', icon: 'ti-building', class: 'main', eligible: 325, checkedIn: 18 },
                    { id: 'workshop', name: 'Workshop', desc: 'Workshop ส่วนเสริม - เฉพาะผู้ซื้อ Add-on', icon: 'ti-tool', class: 'workshop', eligible: 85, checkedIn: 5 },
                    { id: 'dinner', name: 'Gala Dinner', desc: 'งานเลี้ยง - เฉพาะผู้ซื้อ Add-on', icon: 'ti-glass-full', class: 'dinner', eligible: 120, checkedIn: 0 }
                ],
                registrations: {
                    'REG-ABC-001': { name: 'Dr. Somchai Jaidee', ticket: 'Full Pass + Workshop + Dinner', avatar: '/images/users/avatar-1.jpg', access: ['main', 'workshop', 'dinner'], checkedIn: {} },
                    'REG-DEF-002': { name: 'Dr. Nattaporn Srisuk', ticket: 'Full Pass Only', avatar: '/images/users/avatar-2.jpg', access: ['main'], checkedIn: {} },
                    'REG-GHI-003': { name: 'Dr. Wichai Tanaka', ticket: 'Full Pass + Dinner', avatar: '/images/users/avatar-3.jpg', access: ['main', 'dinner'], checkedIn: {} }
                }
            },
            2: {
                name: 'Medical Innovation Summit',
                code: 'MIS2026',
                stations: [
                    { id: 'main', name: 'Main Hall', desc: 'ห้องประชุมหลัก', icon: 'ti-building', class: 'main', eligible: 50, checkedIn: 5 }
                ],
                registrations: {
                    'REG-MIS-001': { name: 'Supaporn Chai', ticket: 'Standard', avatar: '/images/users/avatar-4.jpg', access: ['main'], checkedIn: {} },
                    'REG-MIS-002': { name: 'Piyapong Suwannee', ticket: 'VIP', avatar: '/images/users/avatar-5.jpg', access: ['main'], checkedIn: {} }
                }
            }
        };

        let codeIndex = 0;

        function showScreen(screenId) {
            document.querySelectorAll('.screen').forEach(s => s.classList.remove('active'));
            document.getElementById(screenId).classList.add('active');
        }

        function selectEvent(eventId, eventName, eventCode) {
            currentEvent = eventsData[eventId];
            document.getElementById('breadcrumbEvent').textContent = eventName;

            // Build station list
            const stationList = document.getElementById('stationList');
            stationList.innerHTML = currentEvent.stations.map(station => `
                <div class="selection-card station-card ${station.class}" onclick="selectStation('${station.id}')">
                    <i class="ti ${station.icon} station-icon"></i>
                    <div class="selection-card-header">
                        <h3>${station.name}</h3>
                        <span class="badge badge-${station.class === 'main' ? 'primary' : station.class === 'workshop' ? 'success' : 'warning'}">${station.eligible} คน</span>
                    </div>
                    <div class="info"><span>${station.desc}</span></div>
                    <div class="stats">
                        <div class="stat"><div class="stat-value stat-checked">${station.checkedIn}</div><div class="stat-label">Checked In</div></div>
                        <div class="stat"><div class="stat-value stat-pending">${station.eligible - station.checkedIn}</div><div class="stat-label">Pending</div></div>
                    </div>
                </div>
            `).join('');

            showScreen('stationScreen');
        }

        function selectStation(stationId) {
            currentStation = currentEvent.stations.find(s => s.id === stationId);
            checkedInCount = currentStation.checkedIn;
            eligibleCount = currentStation.eligible;
            codeIndex = 0;

            // Update UI
            document.getElementById('scannerEventBadge').textContent = currentEvent.code;
            document.getElementById('stationName').textContent = currentStation.name;
            document.getElementById('stationDesc').textContent = currentStation.desc;

            const banner = document.getElementById('stationBanner');
            banner.className = 'station-banner ' + currentStation.class + '-station';

            updateStats();
            showScreen('scannerScreen');
        }

        function backToEvents() { showScreen('eventScreen'); }
        function backToStations() { showScreen('stationScreen'); }

        function simulateScan(type) {
            const overlay = document.getElementById('resultOverlay');
            const content = document.getElementById('resultContent');
            overlay.className = 'result-overlay';

            const codes = Object.keys(currentEvent.registrations);
            let html = '';

            if (type === 'success') {
                const code = codes[codeIndex % codes.length];
                const reg = currentEvent.registrations[code];

                // Check if already checked in at this station
                if (reg.checkedIn[currentStation.id]) {
                    simulateScan('duplicate');
                    return;
                }

                // Check if has access to this station
                if (!reg.access.includes(currentStation.id)) {
                    simulateScan('no-access');
                    return;
                }

                reg.checkedIn[currentStation.id] = true;
                checkedInCount++;
                codeIndex++;
                updateStats();

                overlay.classList.add('show', 'success');
                html = `
                    <i class="ti ti-circle-check result-icon"></i>
                    <div class="result-title">Check-in สำเร็จ!</div>
                    <img src="${reg.avatar}" class="result-avatar">
                    <div class="result-name">${reg.name}</div>
                    <div class="result-ticket">${reg.ticket}</div>
                    <div class="result-code">${code}</div>
                    <button class="btn-next" onclick="closeResult()">Scan ต่อ →</button>
                `;
            } else if (type === 'duplicate') {
                const code = codes[(codeIndex > 0 ? codeIndex - 1 : 0) % codes.length];
                const reg = currentEvent.registrations[code];

                overlay.classList.add('show', 'warning');
                html = `
                    <i class="ti ti-alert-triangle result-icon"></i>
                    <div class="result-title">เช็คอินแล้ว</div>
                    <img src="${reg.avatar}" class="result-avatar">
                    <div class="result-name">${reg.name}</div>
                    <p style="margin-top:0.5rem; opacity:0.9;">ลงทะเบียนที่ <strong>${currentStation.name}</strong> แล้ว</p>
                    <button class="btn-next" onclick="closeResult()">Scan ต่อ →</button>
                `;
            } else if (type === 'no-access') {
                const code = codes[codeIndex % codes.length];
                const reg = currentEvent.registrations[code] || { name: 'Test User', ticket: 'Standard', avatar: '/images/users/avatar-1.jpg' };

                overlay.classList.add('show', 'no-access');
                html = `
                    <i class="ti ti-lock result-icon"></i>
                    <div class="result-title">ไม่มีสิทธิ์เข้างาน</div>
                    <img src="${reg.avatar}" class="result-avatar">
                    <div class="result-name">${reg.name}</div>
                    <div class="result-ticket">${reg.ticket}</div>
                    <p style="margin-top:0.75rem; opacity:0.9; font-size:0.9rem;">
                        <i class="ti ti-x me-1"></i>ไม่ได้ซื้อ Add-on สำหรับ <strong>${currentStation.name}</strong>
                    </p>
                    <button class="btn-next" onclick="closeResult()">Scan ต่อ →</button>
                `;
            }

            content.innerHTML = html;
            if (navigator.vibrate) {
                navigator.vibrate(type === 'success' ? [100] : [100, 50, 100]);
            }
        }

        function manualCheckIn() {
            const code = document.getElementById('manualCode').value.trim().toUpperCase();
            if (!code) return;

            const overlay = document.getElementById('resultOverlay');
            const content = document.getElementById('resultContent');
            overlay.className = 'result-overlay';

            const reg = currentEvent.registrations[code];
            let html = '';

            if (!reg) {
                overlay.classList.add('show', 'error');
                html = `<i class="ti ti-circle-x result-icon"></i><div class="result-title">ไม่พบรหัส</div><div class="result-code">${code}</div><button class="btn-next" onclick="closeResult()">ลองใหม่ →</button>`;
            } else if (!reg.access.includes(currentStation.id)) {
                overlay.classList.add('show', 'no-access');
                html = `<i class="ti ti-lock result-icon"></i><div class="result-title">ไม่มีสิทธิ์เข้างาน</div><img src="${reg.avatar}" class="result-avatar"><div class="result-name">${reg.name}</div><p style="margin-top:0.5rem;">ไม่ได้ซื้อ Add-on สำหรับ ${currentStation.name}</p><button class="btn-next" onclick="closeResult()">Scan ต่อ →</button>`;
            } else if (reg.checkedIn[currentStation.id]) {
                overlay.classList.add('show', 'warning');
                html = `<i class="ti ti-alert-triangle result-icon"></i><div class="result-title">เช็คอินแล้ว</div><img src="${reg.avatar}" class="result-avatar"><div class="result-name">${reg.name}</div><button class="btn-next" onclick="closeResult()">Scan ต่อ →</button>`;
            } else {
                reg.checkedIn[currentStation.id] = true;
                checkedInCount++;
                updateStats();
                overlay.classList.add('show', 'success');
                html = `<i class="ti ti-circle-check result-icon"></i><div class="result-title">Check-in สำเร็จ!</div><img src="${reg.avatar}" class="result-avatar"><div class="result-name">${reg.name}</div><div class="result-ticket">${reg.ticket}</div><button class="btn-next" onclick="closeResult()">Scan ต่อ →</button>`;
            }

            content.innerHTML = html;
            document.getElementById('manualCode').value = '';
            if (navigator.vibrate) navigator.vibrate(100);
        }

        function closeResult() { document.getElementById('resultOverlay').classList.remove('show'); }

        function updateStats() {
            document.getElementById('statCheckedIn').textContent = checkedInCount;
            document.getElementById('statPending').textContent = eligibleCount - checkedInCount;
            document.getElementById('statPercent').textContent = ((checkedInCount / eligibleCount) * 100).toFixed(0) + '%';
        }

        document.getElementById('manualCode').addEventListener('keypress', function (e) { if (e.key === 'Enter') manualCheckIn(); });
    </script>
</body>

