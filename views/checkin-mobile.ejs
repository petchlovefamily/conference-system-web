    <div class="screen" id="scannerScreen">
        <div class="app-header">
            <button class="btn-back" onclick="backToStations()"><i class="ti ti-arrow-left"></i></button>
            <h1 class="app-title"><i class="ti ti-scan me-2"></i>Check-in</h1>
