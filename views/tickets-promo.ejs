                <%- contentFor('extra_javascript') %>
                    <script>
                        let currentCode = '';

                        function viewPromo(code, event, type, value, limit, used, start, end, status) {
                            document.getElementById('viewPromoCode').textContent = code;
                            document.getElementById('viewPromoEvent').textContent = event;
                            document.getElementById('viewPromoDiscount').textContent = type === 'percentage' ? value + '% OFF' : '฿' + value + ' OFF';
                            document.getElementById('viewPromoUsage').textContent = used + ' / ' + limit + ' used';
                            document.getElementById('viewPromoStart').textContent = start;
                            document.getElementById('viewPromoEnd').textContent = end;
                            const statusClass = status === 'Active' ? 'success' : status === 'Exhausted' ? 'secondary' : 'danger';
                            document.getElementById('viewPromoStatus').innerHTML = '<span class="badge bg-' + statusClass + '">' + status + '</span>';
                        }

                        function editPromo(code, type, value, limit, start, end) {
                            currentCode = code;
                            document.getElementById('editPromoCode').value = code;
                            document.getElementById('editPromoType').value = type;
                            document.getElementById('editPromoValue').value = value;
                            document.getElementById('editPromoLimit').value = limit;
                            document.getElementById('editPromoStart').value = start;
                            document.getElementById('editPromoEnd').value = end;
                        }

                        function addPromo() {
                            bootstrap.Modal.getInstance(document.getElementById('addPromoModal')).hide();
                            showToast('Promo code created successfully!');
                        }

                        function savePromo() {
                            bootstrap.Modal.getInstance(document.getElementById('editPromoModal')).hide();
                            showToast('Promo code updated successfully!');
                        }

                        function deletePromo(code) {
                            currentCode = code;
                            document.getElementById('deletePromoCode').textContent = code;
                        }

                        function confirmDelete() {
                            bootstrap.Modal.getInstance(document.getElementById('deletePromoModal')).hide();
                            showToast('Promo code deleted.');
                        }

                        function showToast(msg) {
                            document.getElementById('toastMessage').textContent = msg;
                            new bootstrap.Toast(document.getElementById('successToast')).show();
                        }
                    </script>