                <%- contentFor('extra_javascript') %>
                    <script>
                        let currentStatus = '';

                        function viewUser(name, email, role, regs, status, joined, license) {
                            document.getElementById('viewUserName').textContent = name;
                            document.getElementById('viewUserEmail').textContent = email;
                            const roleClass = role === 'Admin' ? 'danger' : role === 'Member' ? 'success' : 'info';
                            document.getElementById('viewUserRole').innerHTML = '<span class="badge bg-' + roleClass + '">' + role + '</span>';
                            document.getElementById('viewUserLicense').textContent = license;
                            document.getElementById('viewUserRegs').textContent = regs;
                            const statusClass = status === 'Active' ? 'success' : 'danger';
                            document.getElementById('viewUserStatus').innerHTML = '<span class="badge bg-' + statusClass + '-subtle text-' + statusClass + '">' + status + '</span>';
                            document.getElementById('viewUserJoined').textContent = joined;
                        }

                        function editUser(id, name, email, role, status, license) {
                            document.getElementById('editUserId').value = id;
                            document.getElementById('editName').value = name;
                            document.getElementById('editEmail').value = email;
                            document.getElementById('editRole').value = role;
                            document.getElementById('editLicense').value = license;
                            document.getElementById('editStatusSel').value = status;
                        }

                        function addUser() {
                            bootstrap.Modal.getInstance(document.getElementById('addUserModal')).hide();
                            showToast('User added successfully!');
                        }

                        function saveUser() {
                            bootstrap.Modal.getInstance(document.getElementById('editUserModal')).hide();
                            showToast('User updated successfully!');
                        }

                        function toggleStatus(name, status) {
                            currentStatus = status;
                            document.getElementById('toggleUserName').textContent = name;
                            if (status === 'Active') {
                                document.getElementById('toggleModalHeader').className = 'modal-header bg-warning';
                                document.getElementById('toggleModalTitle').innerHTML = '<i class="ti ti-ban me-2"></i>Deactivate User';
                                document.getElementById('toggleIcon').className = 'ti ti-ban text-warning fs-48 mb-3';
                                document.getElementById('toggleMessage').textContent = 'Deactivate this user?';
                                document.getElementById('toggleConfirmBtn').className = 'btn btn-warning';
                                document.getElementById('toggleConfirmBtn').textContent = 'Deactivate';
                            } else {
                                document.getElementById('toggleModalHeader').className = 'modal-header bg-success text-white';
                                document.getElementById('toggleModalTitle').innerHTML = '<i class="ti ti-check me-2"></i>Activate User';
                                document.getElementById('toggleIcon').className = 'ti ti-check text-success fs-48 mb-3';
                                document.getElementById('toggleMessage').textContent = 'Activate this user?';
                                document.getElementById('toggleConfirmBtn').className = 'btn btn-success';
                                document.getElementById('toggleConfirmBtn').textContent = 'Activate';
                            }
                        }

                        function confirmToggle() {
                            bootstrap.Modal.getInstance(document.getElementById('toggleStatusModal')).hide();
                            showToast(currentStatus === 'Active' ? 'User deactivated.' : 'User activated.');
                        }

                        function showToast(msg) {
                            document.getElementById('toastMessage').textContent = msg;
                            new bootstrap.Toast(document.getElementById('successToast')).show();
                        }
                    </script>